<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="horizontal"
        >

        <android.widget.ImageButton
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/main"
            android:contentDescription="@string/bottom_sheet_behavior"
            android:padding="10dp"
            android:src="@drawable/back_arrow_resize"
            android:text="" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:text="대포폰"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:textStyle="bold" />

        <android.widget.Button
            android:id="@+id/notButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:text="" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_weight="3"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#0a559c"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="보유 쿠폰 식당"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <EditText
                android:id="@+id/firstFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:enabled="false"
                android:layout_marginLeft="30dp"
                android:text="스타벅스" />

            <android.widget.Button
                android:id="@+id/first_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/main"
                android:textColor="@color/white"
                android:padding="10dp"
                android:text="탐색" />

            <android.widget.Button
                android:id="@+id/first_btn2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/main"
                android:textColor="@color/white"
                android:layout_marginRight="30dp"
                android:padding="10dp"
                android:text="생성" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1">

            <EditText
                android:id="@+id/secondFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:enabled="false"
                android:layout_marginLeft="30dp"
                android:text="맘스터치" />

            <android.widget.Button
                android:id="@+id/second_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/main"
                android:textColor="@color/white"
                android:padding="10dp"
                android:text="탐색" />

            <android.widget.Button
                android:id="@+id/second_btn2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/main"
                android:textColor="@color/white"
                android:layout_marginRight="30dp"
                android:padding="10dp"
                android:text="생성" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/thirdFood"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="2"
                android:textColor="@color/black"
                android:enabled="false"
                android:layout_marginLeft="30dp"
                android:text="천향마라탕" />

            <android.widget.Button
                android:id="@+id/third_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/main"
                android:textColor="@color/white"
                android:padding="10dp"
                android:text="탐색" />

            <android.widget.Button
                android:id="@+id/third_btn2"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:minHeight="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/main"
                android:textColor="@color/white"
                android:layout_marginRight="30dp"
                android:padding="10dp"
                android:text="생성" />

        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_weight="5">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black"
            android:textColor="@color/white"
            android:text="밥지도"

            />

    </LinearLayout>
    </LinearLayout>
</LinearLayout>