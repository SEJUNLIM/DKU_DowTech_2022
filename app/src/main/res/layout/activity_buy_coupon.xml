<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="horizontal">

        <android.widget.ImageButton
            android:id="@+id/backButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:src="@drawable/back_arrow_resize"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="" />

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="대포폰"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp" />

        <android.widget.Button
            android:id="@+id/notButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="카테고리"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@color/grey"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <android.widget.Button
                    android:id="@+id/buyCouponButton"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="식당"
                    android:textSize="25sp"
                    android:elevation="10dp"
                    android:background="@drawable/squarcle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.widget.Button
                    android:id="@+id/myCoupon1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="카페"
                    android:textSize="25sp"
                    android:background="@drawable/squarcle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/buyCouponButton"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <android.widget.Button
                    android:id="@+id/myCoupon2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="편의점"
                    android:textSize="25sp"
                    android:background="@drawable/squarcle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.widget.Button
                    android:id="@+id/myCoupon3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="문구"
                    android:textSize="25sp"
                    android:background="@drawable/squarcle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/myCoupon2"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp">

                <android.widget.Button
                    android:id="@+id/myCoupon4"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="뷰티"
                    android:textSize="25sp"
                    android:background="@drawable/squarcle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.widget.Button
                    android:id="@+id/myCoupon5"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="도서"
                    android:textSize="25sp"
                    android:background="@drawable/squarcle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/myCoupon4"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp">

                <android.widget.Button
                    android:id="@+id/myCoupon6"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="인터넷\n강좌"
                    android:textSize="25sp"
                    android:background="@drawable/squarcle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <android.widget.Button
                    android:id="@+id/myCoupon7"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:text="문화생활"
                    android:textSize="25sp"
                    android:background="@drawable/squarcle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toEndOf="@+id/myCoupon6"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>