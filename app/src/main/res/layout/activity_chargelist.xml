<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="horizontal">

        <android.widget.ImageButton
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:src="@drawable/back_arrow_resize"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="대포폰"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp" />

        <android.widget.ImageButton
            android:id="@+id/my_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:src="@drawable/user_20_resize"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <android.widget.Button
            android:id="@+id/point_charge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="포인트 충전"
            android:textSize="25sp"
            android:background="#d5d5d5"/>

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="#8e8e8e"/>

        <android.widget.Button
            android:id="@+id/charge_list"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="충전 내역"
            android:textSize="25sp"
            android:background="#d5d5d5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="2dp">

        <android.widget.Button
            android:id="@+id/one_month"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="1개월"
            android:textSize="25sp"
            android:background="#d5d5d5"/>

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="#8e8e8e"/>

        <android.widget.Button
            android:id="@+id/three_month"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="3개월"
            android:textSize="25sp"
            android:background="#d5d5d5"/>

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="#8e8e8e"/>

        <android.widget.Button
            android:id="@+id/six_month"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="6개월"
            android:textSize="25sp"
            android:background="#d5d5d5"/>

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="#8e8e8e"/>

        <android.widget.Button
            android:id="@+id/one_year"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="1년"
            android:textSize="25sp"
            android:background="#d5d5d5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/charge_date"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="22.11.15"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/charge_money"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="₩10000"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginTop="4dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:text="22.11.18"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="start"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"/>

        <TextView
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="₩25000"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="end"
            android:layout_marginTop="4dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="190dp">

        <android.widget.Button
            android:id="@+id/page"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:background="@color/white"
            android:layout_marginStart="180dp"/>



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="충전 내역 안내"
            android:gravity="center"
            android:textSize="50sp"/>

    </LinearLayout>
</LinearLayout>