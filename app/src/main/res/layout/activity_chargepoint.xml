<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="horizontal">

        <android.widget.ImageButton
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:src="@drawable/back_arrow_resize"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="대포폰"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp" />

        <android.widget.ImageButton
            android:id="@+id/my_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:src="@drawable/user_20_resize"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <android.widget.Button
            android:id="@+id/point_charge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="포인트 충전"
            android:textSize="25sp"
            android:background="#d5d5d5"/>

        <View
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:background="#8e8e8e"/>

        <android.widget.Button
            android:id="@+id/charge_list"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="충전 내역"
            android:textSize="25sp"
            android:background="#d5d5d5"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="5000포인트"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:gravity="start"/>

        <android.widget.Button
            android:id="@+id/five_thousands"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="₩5000"
            android:textSize="21sp"
            android:background="#EEEEEE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="10000포인트"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:gravity="start"/>

        <android.widget.Button
            android:id="@+id/ten_thousands"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="₩10000"
            android:textSize="21sp"
            android:background="#EEEEEE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="20000포인트"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:gravity="start"/>

        <android.widget.Button
            android:id="@+id/twenty_thousands"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="₩20000"
            android:textSize="21sp"
            android:background="#EEEEEE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="30000포인트"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:gravity="start"/>

        <android.widget.Button
            android:id="@+id/thirty_thousands"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="₩30000"
            android:textSize="21sp"
            android:background="#EEEEEE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <TextView
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:text="50000포인트"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            android:layout_marginStart="15dp"
            android:gravity="start"/>

        <android.widget.Button
            android:id="@+id/fifty_thousands"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="₩50000"
            android:textSize="21sp"
            android:background="#EEEEEE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <android.widget.Button
            android:id="@+id/user_input"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="5dp"
            android:text="직접 입력하여 충전하기"
            android:textSize="17sp"
            android:background="#EEEEEE"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="포인트 충전 안내"
            android:gravity="center"
            android:textSize="50sp"/>

    </LinearLayout>


</LinearLayout>