                        android:paddingBottom="10dp"
                        android:text="￦8000" />
                </LinearLayout>

                <View
                    android:id="@+id/partition3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/black" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>


