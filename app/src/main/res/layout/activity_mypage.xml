<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/main"
        android:orientation="horizontal">

        <android.widget.ImageButton
            android:id="@+id/button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:src="@drawable/back_arrow_resize"
            android:layout_gravity="center"
            android:padding="10dp"
            android:text="" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="대포폰"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="30sp" />

        <android.widget.Button
            android:id="@+id/notButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/main"
            android:text="" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_marginTop="40dp"
        android:background="#d5d5d5">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="138dp"
            android:layout_height="match_parent"
            app:srcCompat="?android:attr/listChoiceIndicatorSingle"
            android:contentDescription="TODO" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User\nImage"
            android:textColor="@color/black"
            android:layout_marginStart="47dp"
            android:layout_marginTop="65dp"/>

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile"
            android:layout_marginTop="7dp"
            android:layout_toEndOf="@id/profile"
            android:text="단곰이"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/user_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/user_name"
            android:layout_marginStart="8dp"
            android:layout_marginTop="-1dp"
            android:layout_toEndOf="@id/user_name"
            android:text="VVIP"
            android:textColor="@color/black"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/user_univ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단국대학교 죽전캠퍼스"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:layout_alignStart="@id/user_name"
            android:layout_below="@id/user_name"/>

        <TextView
            android:id="@+id/used_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_univ"
            android:layout_alignStart="@id/user_name"
            android:layout_marginTop="12dp"
            android:text="사용 금액 : 490만 5천원"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/next_grade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@id/user_name"
            android:layout_below="@id/used_point"
            android:text="예정 등급 : VIP"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">

        <android.widget.Button
            android:id="@+id/profile_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="  프로필 변경"
            android:textSize="30sp"
            android:gravity="start"
            android:background="#d5d5d5"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <android.widget.Button
            android:id="@+id/pw_change"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="  비밀번호 변경"
            android:textSize="30sp"
            android:gravity="start"
            android:background="#d5d5d5"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <android.widget.Button
            android:id="@+id/coupon_used_list"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="  쿠폰 사용 내역"
            android:textSize="30sp"
            android:gravity="start"
            android:background="#d5d5d5"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <android.widget.Button
            android:id="@+id/point_charge"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="  포인트 충전하기"
            android:textSize="30sp"
            android:gravity="start"
            android:background="#d5d5d5"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#d5d5d5"
        android:orientation="horizontal"
        android:layout_marginTop="1dp">

        <android.widget.Button
            android:id="@+id/app_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="  애플리케이션 설정"
            android:textSize="30sp"
            android:gravity="start"
            android:background="#d5d5d5"
            android:layout_marginTop="3dp"
            android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="추천인 코드 : ADSX234V"
            android:textSize="30sp"
            android:textColor="@color/black"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <android.widget.Button
            android:id="@+id/account_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="계정 탈퇴"
            android:layout_marginStart="160dp"/>

    </LinearLayout>

</LinearLayout>